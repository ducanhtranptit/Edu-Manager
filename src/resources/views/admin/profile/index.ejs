<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<!-- Profile Image -->
				<div class="card card-primary card-outline">
					<div class="card-body box-profile">
						<div class="text-center">
							<img
								class="profile-user-img img-fluid img-circle"
								src="/uploads/z4569803331548_07658aaee8cd324df7804a95ca919abd.jpg"
								alt="User profile picture"
							/>
						</div>

						<h3 class="profile-username text-center"><%= userName %></h3>

						<p class="text-muted text-center">Software Engineer</p>
					</div>
				</div>
				<div class="card card-primary">
					<div class="card-body">
						<div class="row">
							<div class="col-md-6">
								<div
									class="border rounded border-primary d-flex flex-column align-items-center p-3 mb-3"
								>
									<div
										class="border rounded border-primary d-flex flex-column align-items-center p-3 col-12"
									>
										<h3>Kết nối với mạng xã hội để đăng nhập dễ dàng hơn</h3>
										<h3>Settings</h3>
										<div class="mb-3">
											<span>Liên kết đăng nhập với Google</span>
											<label class="switch">
												<a
													href="<%= socials.includes('google') ? '/deleteSocial': '/auth/google/redirect'%>"
												>
													<input type="checkbox" <%=
													socials.includes('google') ? 'checked': ''%>>
													<span class="slider round"></span>
												</a>
											</label>
										</div>
										<div class="mb-3">
											<span>Liên kết đăng nhập với Github</span>
											<label class="switch">
												<a
													href="<%= socials.includes('github') ? '/deleteSocialGithub': '/auth/github/redirect'%>"
												>
													<input type="checkbox" <%=
													socials.includes('github') ? 'checked': ''%>>
													<span class="slider round"></span>
												</a>
											</label>
											<br />
											<a href="/" class="btn btn-danger">Thoát</a>
										</div>
									</div>
									<div
										class="border rounded border-primary d-flex flex-column align-items-center p-3 col-12"
									>
										<h1>hello</h1>
									</div>
								</div>
							</div>
							<div class="col-md-6">
								<div
									class="border rounded border-primary d-flex flex-column align-items-center p-3"
								>
									<h1>hello</h1>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- /.card -->
			</div>
		</div>
		<!-- /.row -->
	</div>
	<!-- /.container-fluid -->
</section>
